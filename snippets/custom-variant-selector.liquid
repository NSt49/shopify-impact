<div class="custom-variant-selector">
  {% assign displayed_variants = product.variants | slice: 0, 3 %}

  {% for variant in displayed_variants %}
    <label class="custom-variant-selector__block{% if forloop.first %} selected{% endif %}" data-variant-id="{{ variant.id }}">
      <span class="variant-indicator"></span>
      <input type="radio" name="custom_variant_id" class="hidden-radio" value="{{ variant.id }}" {% if forloop.first %}checked{% endif %}>
      <div class="variant-card">
        {% if forloop.index <= 2 %}
          <div class="variant-badge">Soldes été -20%</div>
        {% endif %}

        {% if variant.metafields.custom.custom_image != blank %}
          <img src="{{ variant.metafields.custom.custom_image | image_url: width: 300 }}" alt="{{ variant.title }}">
        {% elsif variant.featured_image %}
          <img src="{{ variant.featured_image | image_url: width: 300 }}" alt="{{ variant.title }}">
        {% else %}
          <img src="{{ 'placeholder.jpg' | asset_url }}" alt="Image indisponible">
        {% endif %}

        <div class="variant-title">{{ variant.title }}</div>
        <div class="variant-price">
          {% if variant.compare_at_price > variant.price %}
            <span class="old-price">{{ variant.compare_at_price | money }}</span>
            <span class="new-price">{{ variant.price | money }}</span>
          {% else %}
            <span class="new-price">{{ variant.price | money }}</span>
          {% endif %}
        </div>
      </div>
    </label>
  {% endfor %}
</div>

<style>
  .custom-variant-selector {
    display: flex;
    flex-direction: row;
    gap: 12px;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }
  .custom-variant-selector__block {
    flex: 1;
    text-align: center;
    cursor: pointer;
    position: relative;
  }
  .variant-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    border: 2px solid #ccc;
    border-radius: 8px;
    padding: 20px;
    height: 100%;
    transition: border-color 0.2s ease, background-color 0.2s ease;
  }
  .custom-variant-selector__block.selected .variant-card,
  .custom-variant-selector__block input[type="radio"]:checked + .variant-card {
    border-color: black;
    background-color: #f7f7f7;
  }
  .variant-card img {
    height: 80px;
    object-fit: contain;
    margin-bottom: 6px;
  }
  .variant-title {
    font-weight: bold;
    font-size: 15px;
  }
  .variant-price {
    font-size: 16px;
    display: flex;
    gap: 6px;
    align-items: center;
    justify-content: center;
  }
  .old-price {
    text-decoration: line-through;
    color: #999;
    font-size: 0.9em;
  }
  .new-price {
    font-weight: bold;
    font-size: 1em;
  }
  .variant-badge {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background-color: #171F2E;
    color: white;
    padding: 4px 12px;
    font-size: 13px;
    font-weight: bold;
    border-radius: 999px;
    line-height: 1.4;
    white-space: nowrap;
    z-index: 2;
  }
  .variant-indicator {
    position: absolute;
    top: 8px;
    left: 8px;
    width: 14px;
    height: 14px;
    border: 2px solid black;
    border-radius: 50%;
    background-color: transparent;
    z-index: 10;
  }
  .custom-variant-selector__block.selected .variant-indicator {
    background-color: black;
  }
  .hidden-radio {
    display: none;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const radios = document.querySelectorAll(".custom-variant-selector__block input[type='radio']");
    const productForm = document.querySelector('form[action^="/cart/add"]');

    radios.forEach((radio) => {
      radio.addEventListener("change", (e) => {
        const selectedId = e.target.value;
        const hiddenInput = productForm.querySelector('input[name="id"]');
        if (hiddenInput) {
          hiddenInput.value = selectedId;
        }

        document.querySelectorAll(".custom-variant-selector__block").forEach((el) =>
          el.classList.remove("selected")
        );
        e.target.closest(".custom-variant-selector__block").classList.add("selected");
      });
    });
  });
</script>
